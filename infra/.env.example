# AnimApp Docker Environment Configuration

# Database Configuration (PostgreSQL)
POSTGRES_DB=animapp
POSTGRES_USER=animapp
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://animapp:password@db:5432/animapp

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# ComfyUI Configuration (running locally)
COMFYUI_SERVER=host.docker.internal:8188

# File Storage
MEDIA_ROOT=/data/media

# Workflow Configuration
COMFYUI_WORKFLOW=/app/workflows/image_to_animation.json

# JWT Configuration
SECRET_KEY=dev-secret-key-change-in-production-please
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Optional: Log level
LOG_LEVEL=INFO