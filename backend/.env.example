# Database Configuration
# For macOS/Windows development:
DATABASE_URL=postgresql://arnie:password@localhost:5432/appdb
# For Docker/Linux production:
# DATABASE_URL=postgresql://arnie:password@db:5432/appdb

# Redis Configuration  
# For macOS/Windows development:
REDIS_URL=redis://localhost:6379/0
# For Docker/Linux production:
# REDIS_URL=redis://redis:6379/0

# ComfyUI Configuration
COMFYUI_SERVER=127.0.0.1:8188

# File Storage (optional - will use platform defaults if not set)
# Windows: ~/Documents/AnimApp/media
# macOS: ~/Documents/AnimApp/media  
# Linux: /data/media
# MEDIA_ROOT=/path/to/custom/media/directory

# Workflow Configuration (optional - will use platform defaults if not set)
# Windows/macOS: ~/Documents/AnimApp/workflows/image_to_animation.json
# Linux: /app/workflows/image_to_animation.json
# COMFYUI_WORKFLOW=/path/to/workflow.json

# JWT Secret
SECRET_KEY=your-secret-key-change-in-production

# Token Expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret
STRIPE_PUBLISHABLE_KEY=your-publishable-key
